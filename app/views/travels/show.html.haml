= breadcrumb :offer_season_travel, @travel

#sidebar-first
  = render 'sidebar_first'

#content
  %h1.page-title
    = @travel.name 
    
  - if current_admin
    .admin.create
      = link_to I18n.t('itinerary.new'), new_offer_season_travel_itinerary_path(@offer_season, @travel), :class => 'button'
      = link_to I18n.t('travel.new'), new_offer_season_travel_path(@offer_season), :class => 'button new'
      = link_to I18n.t('edit'), edit_offer_season_travel_path(@offer_season), :class => 'button'
      = link_to I18n.t('destroy'), offer_season_travel_path(@offer_season), :confirm => I18n.t('confirm_delete'), :method => :delete, :class => 'button heading'

  .content
    - @itineraries.each do |itinerary|
      %h2 Itinerary
      .admin.create
        = link_to I18n.t('edit'), edit_offer_season_travel_itinerary_path(@offer_season, @travel, itinerary), :class => 'button'

      - number = 1;
      %ol
      - itinerary.itinerary_contents.each do |itinerary_content|
        %li
          %span
            DÃ­a
            = number 
            - number += 1;
          = paragraph(itinerary_content.content)
          = itinerary_content.hotel
          = image_tag itinerary_content.itinerary_content_picture(:default)



