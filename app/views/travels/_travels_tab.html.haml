
%h2.title.hide Información General
.h2-tab-title
  = @travel.name
.content.travel-tabs
  .field-description
    = paragraph(@travel.description)
   
  .group-field-information
    .field-picture
      - if @travel.travel_picture.file?
        = image_tag @travel.travel_picture(:thumb), :style => 'width: 130px'
    .field-information
      - if @travel.price.blank?
        .field-items
          Precio
          .field-item
            = @travel.price
      - if !@travel.days.blank?
        .field-items
          Days
          .field-item
            = @travel.days

      - if !@travel.departures.blank?
        .field-items
          Departures Salidas
          .field-item
            = @travel.departures

      - if @travel.maxgroupsize?
        .field-items
          Grupo Máximo
          .field-item
            = @travel.maxgroupsize
    .field-information-extra
      .field-items
        Información General
      .field-items
        Itinerario
      .field-items
        Fechas y Precios
      .field-items.last
        Comparar
  /*???????*/
  .field-advantages
    %h2.h2-tab-title
      Infinity Ventajas
    = paragraph(@travel.notes)
    = paragraph(@travel.weather)
    = paragraph(@travel.travel_map)

