%h1 
  =t('testimonies.index.title')

%table
  %thead
    %tr
      %th 
        =t('activerecord.attributes.testimony.name')
      %th 
        =t('activerecord.attributes.testimony.description')
      %th{ :colspan => 3 }
  
  %tbody
    - for testimony in @testimonies
      %tr{ :class => cycle(:odd, :even) }
        %td= testimony.name
        %td= testimony.description
        %td= link_to t('show'), testimony
        %td= link_to t('edit'), edit_testimony_path(testimony)
        %td= link_to t('destroy'), testimony, :confirm => I18n.t('confirm_delete'), :method => :delete

%br
= link_to t('testimony.new'), new_testimony_path
