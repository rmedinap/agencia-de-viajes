= form_for(@testimony, :html => { :multipart => true }) do |f|
  
  - if @testimony.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.testimony.invalid_record')
      %ul
      - @testimony.errors.full_messages.each do |msg|
        %li= msg
  .form-group
    = f.label :name
    %br
    = f.text_field :name, class:'form-control'
  .form-group
    %br
    = f.label :testimony_picture
    = f.file_field :testimony_picture
  .form-group
    = f.label :description
    %br
    = f.text_area :description, class:'form-control'

  .actions
    = f.submit I18n.t('submit')
