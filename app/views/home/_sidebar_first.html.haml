
%section.search-travel
  .content
    %h2.title Find the travel you need
    = form_tag search_results_path, method: :get, class: 'form' do
      .form-group
        = select_tag "destination", options_from_collection_for_select(@destinations, "id", "name"), prompt: "Search by Travel Destination"
        = select_tag "interest", options_from_collection_for_select(@interests, "id", "name"), prompt: "Search by Travel Interest (optional)"
      = submit_tag 'SEARCH', name: nil, class: 'button'

%section.contact-us
  %h2.title
    Contact Us
  .content
