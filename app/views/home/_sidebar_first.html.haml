    .span.attention-days  Mon-Fri 8am-7pm/Sat 9am-1pm

%section.ways-to-travel
  %h2.title
    Infinity & You
  %dl
    %dt Above & Beyond - Luxury service
    %dd Deluxe - Private collection
    %dt Escorted groups
    %dd Live like a local -  Eco tours

%section.health
  %h2.title
    Health
  .content
    - if !@health_random.blank?
      = link_to @health_random.title, @health_random.url
      %br
      %br
      = link_to image_tag(@health_random.health_picture(:front), class:'img-responsive'), @health_random.url
      %br
      = raw(@health_random.description)
      %br
      = link_to 'See More', healths_path, :class => 'button'

%section.testimony
  %h2.title
    Testimony
  .content
    %h3
      = @last_testimony.name
    %br
    = image_tag(@last_testimony.testimony_picture(:landing_page), class:'img-responsive')
    %br
    = raw(@last_testimony.description)
    %br
    %br
    = link_to I18n.t('testimonies.all'), testimonies_path, :class => 'button'
