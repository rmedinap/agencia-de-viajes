= breadcrumb :offer_season, @offer_season

#sidebar-first
  = render 'sidebar_first'


#content
  %h1.page-title
    = @offer_season.title + ' ' + I18n.t('offer_season.show')
    
  - if current_admin
    .admin.create
      = link_to I18n.t('offer.new'), new_offer_season_offer_path(@offer_season), :class => 'button new'
  .content
    - @offer_seasons_list.each do |offer|
      .field-article
        .field-picture
          = link_to image_tag(offer.offer_picture(:thumb)), offer_season_offer_path(offer.offer_season, offer)
        .field-content
          %h2.title          
            = link_to offer.title, offer_season_offer_path(@offer_season, offer)
          = link_to paragraph_truncate(offer.description, 300) 
          = link_to I18n.t('moredetails'), offer_season_offer_path(offer.offer_season, offer), :class => 'button show'

    




