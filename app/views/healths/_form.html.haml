= form_for(@health, :html => {:multipart => true}, :validate => true) do |f|
  
  - if @health.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.health.invalid_record')
      %ul
      - @health.errors.full_messages.each do |msg|
        %li= msg
  .form-group
    = f.label :title
    = f.text_field :title, class:'form-control'
  .form-group
    = f.label :url
    = f.text_field :url, class:'form-control'
  .form-group
    %br
    = f.label :health_picture
    = f.file_field :health_picture
  .form-group
    = f.label :description
    = f.text_area :description, class:'form-control'

  .actions
    = f.submit I18n.t('submit')
