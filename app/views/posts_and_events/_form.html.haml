- form_for(@posts_and_event) do |f|
  
  - if @posts_and_event.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.posts_and_event.invalid_record')
      %ul
      - @posts_and_event.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions
    = f.submit I18n.t('submit')
