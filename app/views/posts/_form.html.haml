= form_for(@post, :html => {:multipart => true}) do |f|
  
  - if @post.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.post.invalid_record')
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :posts_picture
    %br
    = f.file_field :posts_picture
  .field
    = f.label :content
    %br
    = f.text_area :content
  .field
    = f.label :important
    %br
    = f.check_box :important
  .field
    = f.label :landing_page
    %br
    = f.check_box :landing_page

  .actions
    = f.submit I18n.t('submit')
