= breadcrumb :posts_press_releases

#sidebar-first
  = render 'sidebar_first'

#content
  %h1.page-title
    = page_title! I18n.t('press_releases.index')

  - if current_admin
    .admin.create
      = link_to I18n.t('press_release.new'), new_press_release_path, :class => 'button create'



#content
  = image_tag(@post.posts_picture(:default))

%p
  %strong t('activerecord.attributes.post.title')
  = @post.title
%p
  %strong t('activerecord.attributes.post.content')
  = @post.content
%p
  %strong t('activerecord.attributes.post.important')
  = @post.important
%p
  %strong t('activerecord.attributes.post.landing_page')
  = @post.landing_page



== #{ link_to t('edit'), edit_post_path(@post) } | #{ link_to t('back'), posts_path }
