#content
  %h1.page-title
    =t('destination_picture.new')
  
  
  = form_for(@destination_picture, :url => {:destination_picture_id => params[:destination_picture_id], :action => 'create'}, :html => {:multipart => true}) do |f|
    = render(:partial => 'form', :locals => {:f => f})
    .actions
      = link_to I18n.t('cancel'), destination_path(@destination), :class => 'btn cancel'
      = f.submit I18n.t('submit')


