- form_for(@destination_picture) do |f|
  
  - if @destination_picture.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.destination_picture.invalid_record')
      %ul
      - @destination_picture.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :destination_picture_file_name
    %br
    = f.text_field :destination_picture_file_name
  .field
    = f.label :destination_picture_content_type
    %br
    = f.text_field :destination_picture_content_type
  .field
    = f.label :destination_picture_file_size
    %br
    = f.text_field :destination_picture_file_size
  .field
    = f.label :destination_picture_updated_at
    %br
    = f.datetime_select :destination_picture_updated_at
  .field
    = f.label :destination_id
    %br
    = f.text_field :destination_id

  .actions
    = f.submit I18n.t('submit')
