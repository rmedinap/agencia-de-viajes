!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Infinity PerÃº - Travel Agent'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Infinity'}"}
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      %header{:role => 'banner'}
        = link_to image_tag('/assets/logo.png'), root_path
        = render 'layouts/banner'
        = render 'layouts/navigation'
      %main{:role => "main"}
        .content
          = render 'layouts/messages'
          = render 'layouts/slider'
          = render 'layouts/breadcrumbs'
          = yield
      %footer
    = render 'shared/google_analytics'
