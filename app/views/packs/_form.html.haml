- form_for(@pack) do |f|
  
  - if @pack.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.pack.invalid_record')
      %ul
      - @pack.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :slug
    %br
    = f.text_field :slug

  .actions
    = f.submit I18n.t('submit')
