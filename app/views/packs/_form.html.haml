= form_for(@pack, :html => {:multipart => true}) do |f|
  
  - if @pack.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.pack.invalid_record')
      %ul
      - @pack.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :pack_picture
    = f.file_field :pack_picture

  .actions
    = f.submit I18n.t('submit')
