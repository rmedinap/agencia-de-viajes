= breadcrumb :user_sign_in

#sidebar-first
  = render 'users/sidebar_first'

#content
  %h1.page-title
    = page_title! I18n.t('user.forgot_password')


  .content

    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :validate => true) do |f|
      = devise_error_messages!
      .field
        = f.label :email
        %br/
        = f.email_field :email
      .actions
        = f.submit "Send me reset password instructions"
    = render :partial => "devise/shared/links"
