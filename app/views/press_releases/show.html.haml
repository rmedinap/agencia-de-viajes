= #breadcrumb :press_releases_press_releases

#sidebar-first
  = render 'posts/sidebar_first'

#content
  %h1.page-title
    = page_title! @press_release.title

  - if current_admin
    .admin.create
      = link_to I18n.t('press_release.new'), new_press_release_path, :class => 'button create'



#content
  = image_tag(@press_release.press_release_picture(:medium))
  .content
    = paragraph(@press_release.content)
    .controls
      .navigation
        = link_to I18n.t('back'), press_releases_path, :class => 'button back'
        - if current_admin
          .admin
            = link_to I18n.t('edit'), edit_press_release_path(@press_release), :class => 'button edit'
            = link_to I18n.t('destroy'), @press_release, :confirm => I18n.t('confirm_delete'), :class => 'button delete', :method => :delete




