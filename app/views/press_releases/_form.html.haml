= form_for(@press_release) do |f|
  
  - if @press_release.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.press_release.invalid_record')
      %ul
      - @press_release.errors.full_messages.each do |msg|
        %li= msg
  .form-group
    = f.label :title
    = f.text_field :title, class:'form-control'

  .form-group
    = f.label :content
    = f.text_area :content, class:'form-control'

  .actions
    = f.submit I18n.t('submit')
