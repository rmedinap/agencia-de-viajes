%h1 
  =t('press_releases.index.title')

%table
  %thead
    %tr
      %th 
        =t('activerecord.attributes.press_release.title')
      %th{ :colspan => 3 }
  
  %tbody
    - for press_release in @press_releases
      %tr{ :class => cycle(:odd, :even) }
        %td= press_release.title
        %td= link_to t('show'), press_release
        %td= link_to t('edit'), edit_press_release_path(press_release)
        %td= link_to t('destroy'), press_release, :confirm => I18n.t('confirm_delete'), :method => :delete

%br
= link_to t('press_release.new'), new_press_release_path
