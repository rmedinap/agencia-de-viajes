- form_for(@partner, :html => {:multipart => true}, :validate => true) do |f|
  
  - if @partner.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.partner.invalid_record')
      %ul
      - @partner.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :url
    %br
    = f.text_field :url
  .field
    = f.label :partner_picture
    = f.file_field :partner_picture

  .actions
    = f.submit I18n.t('submit')
