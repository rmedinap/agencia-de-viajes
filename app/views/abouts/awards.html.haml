= breadcrumb :about_awards

#sidebar-first
  = render 'sidebar_first'

#content
  %h1.page-title
    = I18n.t('about.awards')
  .content
    - @milestones.each do |milestone|
      %div{:class => 'field-image ' + cycle('break', '', '', '')}
        = image_tag(milestone.milestone_picture(:thumb))
        %h2.title
          = milestone.title
        = paragraph_truncate(milestone.description, 40)
