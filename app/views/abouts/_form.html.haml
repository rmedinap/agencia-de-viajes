= form_for(@about, :html => {:multipart => true}) do |f|
  
  - if @about.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.about.invalid_record')
      %ul
      - @about.errors.full_messages.each do |msg|
        %li= msg


  .field
    = f.label :title_landing_page
    = f.text_field :title_landing_page

  .field
    = f.label :text_landing_page
    = f.text_area :text_landing_page

  .field
    = f.label :picture_landing_page
    = f.file_field :picture_landing_page

  .field
    = f.label :about_us
    = f.text_area :about_us

  .field
    = f.label :about_picture
    = f.file_field :about_picture

  .field
    = f.label :history
    = f.text_area :history

  .field
    = f.label :global_proyection
    = f.text_area :global_proyection
  .field
    = f.label :global_proyection_picture
    = f.file_field :global_proyection_picture

  .field
    = f.label :work_with_us
    = f.text_area :work_with_us

  .actions
    = f.submit I18n.t('submit')
