-#
  - if params[:action] == 'index'
    - @page_name = 'Destinations'
  - if params[:action] == 'show'
    - @page_name = @offer.name


%nav.navegate-by
  %h2.title
    = I18n.t('offers.index') 
  %ul
    - @offers_sidebar.each do |offer|
      %li
        = link_to_unless_current offer.title, offer_season_offer_path(offer.offer_season, offer) do
          %span
            = offer.title
        .controls
          .navigation
          - if current_admin
            .admin
              = #link_to I18n.t('edit'), edit_offer_path(offer), :class => 'button edit'
              = #link_to I18n.t('destroy'), offer, :confirm => I18n.t('confirm_delete'), :class => 'button delete', :method => :delete



%nav.navegate-by
  %h2.title
    = I18n.t('offer_seasons.index')
  %ul
    - @offer_seasons_sidebar.each do |offer_season|
      %li
        = link_to_unless_current offer_season.title, offer_season_path(offer_season) do
          %span
            = offer_season.name
        .controls
          .navigation
          - if current_admin
            .admin
              = link_to I18n.t('edit'), edit_offer_season_path(offer_season), :class => 'button edit'
              = link_to I18n.t('destroy'), offer_season, :confirm => I18n.t('confirm_delete'), :class => 'button delete', :method => :delete


   

