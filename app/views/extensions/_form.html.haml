- form_for(@extension) do |f|
  
  - if @extension.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.extension.invalid_record')
      %ul
      - @extension.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :travel_id
    %br
    = f.text_field :travel_id

  .actions
    = f.submit I18n.t('submit')
