- form_for(@member, :html => { :multipart => :true } ) do |f|
  
  - if @member.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.member.invalid_record')
      %ul
      - @member.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :member_picture
    %br
    = f.file_field :member_picture
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :position
    %br
    = f.text_field :position
  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions
    = f.submit I18n.t('submit')
