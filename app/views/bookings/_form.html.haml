= form_for(@booking) do |f|
  
  - if @booking.errors.any?
    #errorExplanation
      %h2= t('activerecord.errors.messages.booking.invalid_record')
      %ul
      - @booking.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :comment
    = f.text_area :comment

  .actions
    = f.submit I18n.t('submit')
